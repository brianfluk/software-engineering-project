<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" dir="ltr">

<head>
  <meta http-equiv="content-type" content="application/xhtml+xml; charset=UTF-8" />

  <meta http-equiv="X-UA-Compatible" content="chrome=1">
  <meta name="google" value="notranslate">

  <link href="/css/bootstrap.css" rel="stylesheet" type="text/css">
  <link href="/css/theme.css" rel="stylesheet" type="text/css">

  <title>Select your courses -- LectureChat</title>
</head>

<body>
	<%- include navbar.ejs %>
   
    <div class="jumbotron">
      <div class="container">
          <h1>Select your lecture</h1>
          <p>Go to your class.</p>
          <form  method="post" class="form-inline">
              <input class="btn btn-default" type="submit" name="operation" value="New Lecture">
                  <input class="form-control" type="text" name="Lecture Name" required="true">
            </input>
              
          </form>
      </div>
    </div>
    

	<div class="container">
		<div class="row">
			<h1>Where selecting course and lecture goes</h1>
      <p> populate this page with buttons based on the database? </p>
        
        <!-- <p><a class="btn btn-default" href="/chatpage" role="button">this isnt even being read from DB &raquo;</a></p> -->

        <%if (lectures.length > 0) { %>
          <ul class="list-group lecture-list">
            <% for(var i=0; i<lectures.length; i++) { %>
              <li>
                <div class="row">
                  <div class="form-group col-xs-6">
                    <form method="post">
                      <input class="btn btn-default" type="submit" name="Lecture Name" value=<%= lectures[i].name %> id=<%= lectures[i].id %> >
                      <input type="hidden" name="Lecture ID" value=<%= lectures[i].id %>>  
                    </form>
                  </div>
                  <div class="form-group col-xs-6">
                    <form method="post">
                      <input class="btn btn-default" type="submit" name="operation" value="Delete Lecture" id=<%= lectures[i].id %> >
                      <input type="hidden" name="Lecture ID" value=<%= lectures[i].id %>>  
                    </form>
                  </div>
                </div>
              </li>
            <% } %>
          </ul>
        <% } %>
    

		</div>
	</div>

  <div class="container">

  <footer>
    <p>&copy; ScrumVaders 2017</p>
  </footer>
  </div>




</body>
</html>
