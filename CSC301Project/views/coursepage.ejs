<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" dir="ltr">

<head>
  <meta http-equiv="content-type" content="application/xhtml+xml; charset=UTF-8" />

  <meta http-equiv="X-UA-Compatible" content="chrome=1">
  <meta name="google" value="notranslate">

  <link href="/css/bootstrap.css" rel="stylesheet" type="text/css">
  <link href="/css/theme.css" rel="stylesheet" type="text/css">

  <title>Select your courses -- LectureChat</title>
</head>

<body>
	<%- include navbar.ejs %>


    <div class="jumbotron">
      <div class="container">
          <h1>Select your course</h1>
          <p>Go to your class.</p>
          <form  method="post" class="form-inline">
              <input class="btn btn-default" type="submit" name="operation" value="New Course">
                  <input class="form-control" type="text" name="Course Name" required="true">
            </input>

          </form>
      </div>
    </div>


	<div class="container">
		<div class="row-fluid">
            <h1>Courses Available</h1>

            <%if (courses.length > 0) { %>
              <ul class="list-group lecture-list">
                <% for(var i=0; i<courses.length; i++) { %>
                  <li>
                    <div class="row">
                      <div class="form-group col-xs-6">
                        <form method="post">
                          <input class="btn btn-default" type="submit" name="Course Name" value=<%= courses[i].name  + " " +courses[i].term%> id=<%= courses[i].id %> >
                          <input type="hidden" name="Course ID" value=<%= courses[i].id %>>
                        </form>
                      </div>
                      <div class="form-group col-xs-6">
                        <form method="post">
                          <input class="btn btn-default" type="submit" name="operation" value="Delete Course" id=<%= courses[i].id %> >
                          <input type="hidden" name="Course ID" value=<%= courses[i].id %>>
                        </form>
                      </div>
                    </div>
                  </li>
                <% } %>
              </ul>
            <% } %>
            <div class="row-fluid">
                <ul>
                    <li>
                        <a href="pdf/A2.pdf">
                            <h4>
                                A2
                            </h4>
                        </a>
                    </li>
                </ul>
            </div>


		</div>
	</div>

  <div class="container">

  <footer>
    <p>&copy; ScrumVaders 2017</p>
  </footer>
  </div>




</body>
</html>
