	<script>

		var socket = io();

		 window.onload= function(){
			var name = prompt("What is your name?");
			if (name != ''){
				socket.emit('name', name);
			}
		}

	  $(function () {
	    $('form').submit(function(){
	      socket.emit('chat message', $('#m').val());
	      $('#m').val('');
	      return false;
	    });
	    socket.on('chat message', function(msg){
	      $('#messages').append($('<li>').text(msg));
	    });
	  });

